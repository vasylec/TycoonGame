                    </Button.Template>
                </Button>
                <Label x:Name="slot1_Copy" Content="Load Save" Canvas.Left="-73" Canvas.Top="-55" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="672"/>
