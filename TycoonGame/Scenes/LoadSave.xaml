            <!-- Buton Main Menu -->
            <Button x:Name="btnMainMenu" Content="Main Menu" Canvas.Top="10" Height="46" Width="49" Canvas.Left="10" Click="btnMainMenu_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Image x:Name="btnImage" Source="/Assets/Buttons/ButtonBackArrow.png"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
