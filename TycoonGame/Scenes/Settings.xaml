<Page x:Class="TycoonGame.Scenes.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Settings" Height="310" Width="606">

    <Grid>
        <Label Content="Settings" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="32"/>
        <Label Content="Audio" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" FontSize="24"/>

        <Label Content="Master" HorizontalAlignment="Left" Margin="50,120,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Slider x:Name="trackMaster" HorizontalAlignment="Left" Margin="150,120,0,0" VerticalAlignment="Top" Width="350"
                Minimum="0" Maximum="100" Value="100" ValueChanged="trackMaster_ValueChanged"/>

        <Label Content="SFX" HorizontalAlignment="Left" Margin="50,170,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Slider x:Name="trackSFX" HorizontalAlignment="Left" Margin="150,170,0,0" VerticalAlignment="Top" Width="350"
                Minimum="0" Maximum="100" Value="50" ValueChanged="trackSFX_ValueChanged"/>

        <Label Content="Music" HorizontalAlignment="Left" Margin="50,220,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Slider x:Name="trackMusic" HorizontalAlignment="Left" Margin="150,220,0,0" VerticalAlignment="Top" Width="350"
                Minimum="0" Maximum="100" Value="50" ValueChanged="trackMusic_ValueChanged"/>

        <Button x:Name="btnBack" Content="← Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="40" Width="100"
                Click="BackButton_Click" Cursor="Hand"/>
    </Grid>
</Page>
