<Window x:Class="TycoonGame.Scenes.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainMenu" Height="450" Width="800">

    <Grid x:Name="MainGrid">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24,10,0,0">
            <Label Content="Tycoon Game" Margin="0,20,0,20" FontSize="48" FontWeight="Bold"/>

            <!-- Load Button -->
            <Button Width="174" Height="66" Cursor="Hand" Click="btnShowPopup_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Image x:Name="BtnImage" Source="/Assets/Buttons/ButtonNewGame.png" Stretch="Fill"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnImage" Property="Source" Value="/Assets/Buttons/ButtonNewGame_Hover.png"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnImage" Property="Source" Value="/Assets/Buttons/ButtonNewGame_Click.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- New Game Button -->
            <Button Width="174" Height="66" Cursor="Hand" Click="Button_Click_2" Margin="0,20,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Image x:Name="BtnImage" Source="/Assets/Buttons/ButtonLoad.png" Stretch="Fill"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnImage" Property="Source" Value="/Assets/Buttons/ButtonLoad_Hover.png"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnImage" Property="Source" Value="/Assets/Buttons/ButtonLoad_Click.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Settings Button -->
            <Button Width="174" Height="66" Cursor="Hand" Click="Button_Click_1" Margin="0,20,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Image x:Name="BtnImage" Source="/Assets/Buttons/ButtonSettings.png" Stretch="Fill"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnImage" Property="Source" Value="/Assets/Buttons/ButtonSettings_Hover.png"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnImage" Property="Source" Value="/Assets/Buttons/ButtonSettings_Click.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Exit Button -->
            <Button Width="174" Height="66" Cursor="Hand" Click="exitButtonClick" Margin="0,20,0,20">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Image x:Name="BtnImage" Source="/Assets/Buttons/ButtonExit.png" Stretch="Fill"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnImage" Property="Source" Value="/Assets/Buttons/ButtonExit_Hover.png"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BtnImage" Property="Source" Value="/Assets/Buttons/ButtonExit_Click.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>

        <!-- Popup container -->
        <Grid Name="popupContainer" Background="#80000000" Visibility="Collapsed">
            <Border Width="540" Height="315" Background="LightGray" BorderBrush="Black" BorderThickness="2"
                    CornerRadius="10" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="292" Width="517">

                    <Button Content="Închide" Width="52" Click="ClosePopup_Click" Height="59" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Image x:Name="BtnImage" Source="/Assets/Buttons/ButtonX.png" Stretch="Fill"/>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="BtnImage" Property="Source" Value="/Assets/Buttons/ButtonX_Click.png"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock x:Name="newGameTextBlock" Text="Enter your save name !" HorizontalAlignment="Center" Margin="0,5,0,10" Width="514" TextAlignment="Center" FontSize="20"/>
                    <TextBox x:Name="newGameTextBox" TextWrapping="NoWrap" Width="265" Height="37" FontFamily="Daydream" />
                    <Button Content="New Game" Width="189" HorizontalAlignment="Center" Margin="0,20,0,0" Click="btn_newGame" Height="65">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Image x:Name="BtnImage" Source="/Assets/Buttons/ButtonNewGame.png" Stretch="Fill"/>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="BtnImage" Property="Source" Value="/Assets/Buttons/ButtonNewGame_Hover.png"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="BtnImage" Property="Source" Value="/Assets/Buttons/ButtonNewGame_Click.png"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
